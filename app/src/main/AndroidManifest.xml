<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.app.hookcamera">
    <!-- 必须与代码中 namespace 一致 -->
    <!-- 关键：添加读取视频文件的权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" /> <!-- 声明无需实际相机硬件（仅Hook） -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HookCamera"
        tools:targetApi="36">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Xposed 模块核心配置（关键调整） -->
        <meta-data
            android:name="xposedmodule"
            android:value="true" /> <!-- 标识为 Xposed 模块 -->
        <meta-data
            android:name="xposeddescription"
            android:value="摄像头视频替换模块：将目标应用摄像头输入替换为本地视频" /> <!-- 清晰描述功能 -->
        <meta-data
            android:name="xposedminversion"
            android:value="51" />
    </application>

</manifest>